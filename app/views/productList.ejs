<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %> 
<body>
    <%- include('./partials/header.ejs') %>
    <main class="cart">
        
        <h4>Listado de Productos</h4>      
        
        
        <div class="cartform">
           
            <div class="line">
                
            </div>
            
            <% enviarVista.forEach(function(enviarVista){ %>
            
            <article class="art">
                <div class="item">
               
                <a class="img" href="/productDetail"><img src="/Img/productos png/<%= enviarVista.image %>" alt="arroz" width="100px"></a>
                    </div>
                    <div  class="item-2">
                <h4><%= enviarVista.nameProd %></h4>
                </div>
                
                <div class="item-4">
                    <h4>Precio</h4>
                        <textarea name="price" id="" cols="5" rows="1"><%= enviarVista.price %></textarea>

                </div>
                
            </article>
            <div class="line">
                
            </div>
            <% }); %>
    </div>
    
</main>



    <%- include('./partials/footer.ejs') %>
</body>
</html>