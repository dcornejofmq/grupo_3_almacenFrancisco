<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="css/createProduct.css">
    <%- include('./partials/head.ejs') %> 
<body>
    <%- include('./partials/header.ejs') %>
        <main class="formProduct">
            <h2>Editar Producto</h2>
            <form action="/products/edit?_method=PUT" method="POST">
                <input type="text" name="nameProd" id="nameProd" placeholder="Nombre de producto" required>
                <input type="text" name="description" id="description" placeholder="Descripcion" required>
                
                <select type="text" name="category" id="category" required>
                    <option>Seleccione Categoria</option>
                    <option value="despensa">Despensa</option>
                    <option value="bebidas">Bebidas</option>
                    <option value="mascotas">Mascotas</option>
                    <option value="bebes">Bebes</option>
                    <option value="cuiper">Cuidado Personal</option>
                    <option value="limpieza">Limpieza</option>

                <input type="text" name="" class="dataProduct" placeholder="" required>
                <input type="text" name="price" id="price" placeholder="Precio" required>
                <label for="photo">Foto del Producto</label>
                <input type="file"  accept="image/*" name="image" id="image" required>  

                    <button class="btn" type="submit" value="Editar">Enviar Producto</button>



            </form>
           
        </main>

    <%- include('./partials/footer.ejs') %>
</body>

</html>