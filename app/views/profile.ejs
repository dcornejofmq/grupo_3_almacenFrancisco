<html lang="es">
    <%- include('./partials/head.ejs')  %> 
<body>
	<%- include('./partials/header.ejs') %>
	
	<!-- Container -->
	<div class="container" style="margin-top: 40px;">
		<div class="row">
			<div class="col-md-3">
				<h2>Bienvenido <%= user.firstName %> <%= user.lastName %>   </h2>
				<img class="imgProfile" src= '/Img/users/<%= user.image %>'>
				<br>
				<br>
				<div class="emailProfile">E-Mail: <%= user.email %></div>
			</div>
		</div>
		<div class='edit'>
			<a href="/users/edit/<%= user.id %>"><button class="btn">Editar Usuario</button></a>
			<a href="/users/delete/<%= user.id %>"><button class="btn">Eliminar Usuario</button></a>
		</div>
	</div>

	<!-- //Container -->
	
	<%- include('partials/footer'); %>
